<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-autowire="byName">

    <bean name="multipartUploadListener" class="net.sourceforge.fluxion.ajax.beans.util.FileUploadListener"/>

    <bean id="multipartResolver" class="uk.ac.bbsrc.tgac.browser.web.AjaxMultipartResolver">
            <property name="maxUploadSize" value="1000000"/>
            <property name="fileUploadListener" ref="multipartUploadListener"/>
        </bean>

    <bean id="fileUploadController" class="uk.ac.bbsrc.tgac.browser.web.UploadController">
        <property name="filesManager" ref="browserFileManager"/>
    </bean>

    <bean id="browserFileManager" class="uk.ac.bbsrc.tgac.browser.web.BrowserFilesManager">
        <property name="fileStorageDirectory" value="/temp"/>
    </bean>



</beans>